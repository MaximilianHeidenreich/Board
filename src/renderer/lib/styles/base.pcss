/* From & Inputs */
input {
    background: transparent;
}
.form-control {
    @apply my-5;
}
input[type="text"] {
    @apply bg-gray-50 border border-gray-300 text-black sm:text-sm rounded-lg focus:ring-black focus:border-black outline-none block w-full p-2.5;
}
.app-wrapper.dark input[type="text"] {
    @apply bg-neutral-800 border border-neutral-700 text-white sm:text-sm rounded-lg focus:ring-white focus:border-white outline-none block w-full p-2.5;
}
