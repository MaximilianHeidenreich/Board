/* Very Smol Reset */
* {
    box-sizing: border-box;
    margin: 0;
    user-select: none;
}
ol,
ul {
    list-style: none;
    list-style-type: none;
}
ul li {
    list-style: none;
    list-style-type: none;
}

html,
body,
main {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    /*line-height: 1.5;*/
    font: caption;
}
#app {
    width: 100vw;
    height: 100vh;
    --titlebar-height: 3rem;
    --toolbar-height: 3.5rem;
    --content-height: calc(
        100vh - var(--titlebar-height) - var(--toolbar-height)
    );
}
#titlebar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: var(--titlebar-height);
    z-index: 500;
    /*background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);*/
    -webkit-app-region: drag;
}

.selectable {
    user-select: auto;
}

/* Scrollbars */
::-webkit-scrollbar {
    width: 20px;
}

::-webkit-scrollbar-track {
    background-color: transparent;
}

::-webkit-scrollbar-thumb {
    background-color: #d6dee1;
    @apply bg-slate-100;
    border-radius: 20px;
    border: 6px solid transparent;
    background-clip: content-box;
}

::-webkit-scrollbar-thumb:hover {
    background-color: #a8bbbf;
    @apply bg-slate-200;
}

.app-wrapper.dark ::-webkit-scrollbar-thumb {
    @apply bg-neutral-700;
}
.app-wrapper.dark ::-webkit-scrollbar-thumb:hover {
    @apply bg-neutral-600;
}

/* Typography */
.app-wrapper {
    @apply text-black;
    --muted-color: rgb(115, 115, 115);
}
.app-wrapper.dark {
    --muted-color: rgb(163, 163, 163);
}
.app-wrapper .text-muted {
    @apply text-neutral-500;
}
.app-wrapper.dark {
    @apply text-white;
}
.app-wrapper.dark .text-muted {
    @apply text-neutral-400;
}
